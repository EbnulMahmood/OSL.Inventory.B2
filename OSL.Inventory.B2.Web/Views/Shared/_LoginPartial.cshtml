@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <div class="navbar-nav">
            <div class="nav-item text-nowrap">
                @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage",
                    routeValues: null, htmlAttributes: new { title = "Manage", @class = "nav-link px-3" })
            </div>
        </div>
        <div class="navbar-nav">
            <div class="nav-item text-nowrap">
                <a class="nav-link px-3" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
            </div>
        </div>
    }
}
else
{
    <div class="navbar-nav">
        <div class="nav-item text-nowrap">
            @Html.ActionLink("Register", "Register", "Account", routeValues: null,
                htmlAttributes: new { id = "registerLink", @class = "nav-link px-3" })
        </div>
    </div>
    <div class="navbar-nav">
        <div class="nav-item text-nowrap">
            @Html.ActionLink("Log in", "Login", "Account", routeValues: null,
                htmlAttributes: new { id = "loginLink", @class = "nav-link px-3" })
        </div>
    </div>
}
